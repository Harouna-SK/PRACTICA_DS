    <!-- todos los logs -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DEBUG_FILE"/>
        <appender-ref ref="ACTIVITY_FILE"/>
    </root>

</configuration>
