<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level [%logger{20}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- logfile -->
    <appender name="DEBUG_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/debug.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d %-5level [%logger] %msg%n</pattern>
        </encoder>
        
    </appender>

    <!-- activity.log -->
    <appender name="ACTIVITY_FILE" class="ch.qos.logback.core.FileAppender">
        <!-- <file>activity.log</file> -->
        <file>logs/activity.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d [%logger] %msg%n</pattern>
        </encoder>

        <filter class="ch.qos.logback.classic.filter.MarkerFilter">
            <marker>ACTIVITY</marker>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>DENY</onMatch>
            <onMismatch>NEUTRAL</onMismatch>
        </filter>
    </appender>


    <!-- logs primer milestone -->
    
    <!--
    <logger name="baseNoStates.spaces" level="DEBUG"/>
